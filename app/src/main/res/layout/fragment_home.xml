<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sirfireys.rana.noidainternationaluniversity.HomeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/niu_cover"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentdark"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/t_titleline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Noida International University"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"/>

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_titleline"
            android:text="\nNIU CAMPUS:\nPlot 1, Sector - 17A, \nYamuna Expressway, Gautam Budh Nagar, \nUP, India (203201)"
            android:textColor="@color/white"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_titleline"
            android:text="\nCORPORATE OFFICE:\n309, Jaipuria Plaza, \nSector 26, Gautam Budh Nagar, \nUP, India (203201)"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>
