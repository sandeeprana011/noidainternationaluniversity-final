<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="7dp"
    android:gravity="center|left">

    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/i_filetype"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pdf"/>

    <TextView
        android:id="@+id/t_titlefile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/i_filetype"
        android:text="Hinduism"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/t_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_titlefile"
        android:layout_toRightOf="@+id/i_filetype"
        android:text="Lovable human beings"/>

</RelativeLayout>